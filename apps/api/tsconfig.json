{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist"]
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compileOnSave": false,
  "preserveWatchOutput": true
}
