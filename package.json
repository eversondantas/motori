{
  "name": "motori",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"pnpm -C apps/api start:dev\" \"pnpm -C apps/web dev\"",
    "build": "pnpm -r run build",
    "lint": "eslint \"apps/api/**/*.{ts,tsx}\" \"apps/web/**/*.{ts,tsx}\" \"packages/shared-types/src/**/*.ts\"",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.12.0",
    "prettier": "^3.8.1"
  }
}
